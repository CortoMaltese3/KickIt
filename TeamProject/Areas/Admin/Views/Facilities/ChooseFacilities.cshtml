@model IEnumerable<TeamProject.Models.Facility>

@{
    ViewBag.Title = "ChooseFacilities";
}

<h2>ChooseFacilities</h2>
<br />
<form method="get" action="~/Admin/Facilities/AddFacilities/@ViewBag.BranchId">
    <div class="row form-group particularities-container">
        <div class="col-xs-6 col-sm-3">
            @foreach (var item in Model)
            {
                <div class="toggle_container inline">
                    <div class="toggle">
                        <input class="form-check-input" type="checkbox"name="SelectedFacilities"
                               value="@item.Id">
                    </div>
                    <div class="label_container">
                        <label class="form-check-label">@item.Description</label>
                    </div>
                </div>
            }
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-secondary" value="Submit">Add Facilities</button>
</form>

