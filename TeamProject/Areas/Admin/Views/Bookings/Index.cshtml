                                            booked = "true",
                                            data_html = "true",
                                            data_placement = "top",
                                            data_toggle = "popover",
                                            title = "Booked at " + @item.Hour.ToString("hh\\:mm"),
                                            data_content = ""
                                        })
                                }
                                else if (item.Day2 == 0)
                                {
                                    <a>Available</a>
                                }
                            </td>
                            <td>
                                @if (item.Day3 > 0)
                                {
