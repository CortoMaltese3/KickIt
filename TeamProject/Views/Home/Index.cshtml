@model IEnumerable<TeamProject.Models.Court>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
@section Styles{
    <link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500">
    <link rel="stylesheet" href="~/Content/google-maps.css" />
    <style>
        .opacityy {
            opacity: 1;
        }
    </style>
}
<div id="carouselIndicators" class="carousel slide card-img-top" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Images/Carrousel/FIFA-2018-World-Cup-Featured-1366x768.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>On the road to World Cup?</h5>
                <p>Find Your Court Now!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/Carrousel/880x495_cmsv2_a9dcd7ed-1ff5-5d7c-8de0-63b847a68c91-3156825.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Experienced player or just a football enthusiast?</h5>
                <p>Find Your Court Now!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Images/Carrousel/Footbal_Men_Ball_Glove_515345_1366x768.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Part of a team, league or simply playing with friends?</h5>
                <p>Find Your Court Now!</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="col-md-12 margin-toper">
        <form id="form-submit" class="input-group" method="post" action="/Branches/Nearest">
            <input id="autocomplete" class="form-control border-secondary py-2 form-control col-md-4 rounded-pill border-success leftmarge" type="search" placeholder="Search">
            <input id="latitude" hidden name="latitude" type="text">
            <input id="longitude" hidden name="longitude" type="text">
            <div class="input-group-append">
                <button id="form-search" class="btn btn-success rounded-pill" type="submit">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="page-item text-center form-text">BOOK YOUR COURT</h2>
            <p class="text-center">Choose between a variety of football facilities all around Greece</p>
        </div>
    </div>
    <div class="row d-flex justify-content-around ">
        <br />
        @foreach (var court in Model)
        {
            <div class="col-md-4 d-none d-sm-block col-sm-5">
                <div class="card bg-dark text-white rounded ml-3 mt-3 mr-3">
                    <img src="~/Images/Courts/@court.ImageCourt" class="card-img movie-Thumbnail" alt="@court.Name">
                    <div class="card-img-overlay">
                        <h4 class="card-title text-center" style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;" >@court.Name</h4>
                        <a href="/Courts/Booking/@court.Id" class="btn btn-block btn-success bottom">Book Now only @court.Price&euro; ! </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


