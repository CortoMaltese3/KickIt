    <script src="~/Scripts/google-maps.js"></script>
    <script>

        $(document).ready(function() {

            const Carousel = $('.carousel-inner .active img');
            const Nav = $('nav');

            console.log(Carousel);
            console.log(Nav);
            $(window).scroll(function () {

                if ($(window).scrollTop() > (Carousel.height() - Nav.height())) {
                    Nav.addClass('opacityy');
                }
                else {
                    Nav.removeClass('opacityy');
                }
            });
        });


    </script>
