@model TeamProject.Models.Booking

@{
    ViewBag.Title = "Confirmed";
}
<div class="container-fluid text-center" style="height:500px;">
    <div>
        <br />
        <br /><br /><br />
        <h2>@Model.User.UserName Thanks for booking.</h2>
        <br />
        <div> You have book <strong> @Model.Court.Name </strong> at <strong>@Model.BookedAt</strong></div>
        <br />
        <span>Your booking number is <strong>@Model.BookKey</strong></span>
        <br />
        <br />
        <span>You can find the Court at @ViewBag.address</span>
        <br />
        <br />
        <span class="text-center"><strong>Cost :</strong> @Model.Court.Price&euro;</span>
    </div>
</div>
