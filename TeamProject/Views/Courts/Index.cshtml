@model IEnumerable<TeamProject.Models.Court>

@{
    ViewBag.Title = "Courts";
}

<br />
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/Modal.css" />

    <style>

        .wrap {
            height: 100%;
            align-items: center;
            justify-content: center;
        }

        .button {
            width: 140px;
            height: 45px;
            font-family: 'Roboto', sans-serif;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: 2.5px;
            font-weight: 500;
            color: #000;
            background-color: beige;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
        }

            .button:hover {
                background-color: #2EE59D;
                box-shadow: 0px 15px 20px rgba(46, 229, 157, 0.4);
                color: #fff;
                transform: translateY(-7px);
            }
    </style>
}

@foreach (var court in Model)
{
    <div class="card mb-3 rounded rounded-lg border border-success d-flex p-2 bd-highlight d-flex shadow-lg">
        <div class="row no-gutters">
            <div class="col-md-4" style="margin-top:auto;margin-bottom:auto;">
                <img src="~/Images/Courts/@court.ImageCourt" 
                     class="card-img shadow click-court-image" 
                     alt="@court.Name" 
                     data-modal-id="#modal-img-@court.Id">
                <div id="myModal" class="modal">
                    <span class="close modal-close-img">&times;</span>
                    <img class="modal-content" 
                         id="modal-img-@court.Id">
                    <div id="caption"></div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-body align-content-end flex-column">
                    <h5 class="card-title">@court.Name</h5>
                    <p class="card-text">@court.Description</p>
                    <div class="wrap float-right">
                        <form action="/Courts/booking/@court.Id">
                            <button class="button shadow" role="button" aria-pressed="true">Book Now!</button>
                        </form>
                    </div>
                    <div class="wrap float-right" style="margin-right:10px;">
                        <form action="/Courts/Details/@court.Id">
                            <button class="button shadow" role="button" aria-pressed="true">Details!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts{
    <script>

        // set on click modal
        $('.click-court-image').click(function () {
            // get modal image using this.data-modal-id
            const modalImg = $($(this).attr('data-modal-id'));

            $(modalImg).closest('div').attr('style','display:block');
            $(modalImg).attr('src', $(this).attr('src'));

        });

        // When the user clicks on <span> (x), close the modal
        $('.modal-close-img').click(function () {
            $(this).closest('div').attr('style', 'display:none');
        });
    </script>


}

