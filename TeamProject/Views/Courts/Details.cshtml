@model TeamProject.Models.Court

@{
    ViewBag.Title = "Details";
}
<br />
<h2 class="text-center">@Model.Name Details</h2>

<div class="container-fluid">
    <div class="col-md-12 col-xl-12 col-sm-12">
        <img src="~/Images/Courts/@Model.ImageCourt" alt="@Model.Name" class="card-img" />
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6 border-right">
            <h2 class="text-center">Description</h2><br />
            <div class="text-left text-muted">
                @Model.Description
            </div>
        </div>
        <div class="col">
            @Html.Partial("FacilitiesPartial", ViewBag.Facilities as IEnumerable<TeamProject.Models.Facility>)
        </div>
    </div>
</div>


<div class="mt-5">
    @Html.ActionLink("Back to Courts", "Index", "Courts", new { id = Model.Branch.Id }, null)
</div>
