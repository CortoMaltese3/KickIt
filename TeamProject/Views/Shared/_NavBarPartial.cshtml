@using TeamProject.Models


<nav class="navbar navbar-dark navbar-expand-lg sticky-top bg-dark test">
    <a class="navbar-brand" href="/home/index">
        <img src="~/Images/Logo/Kick it logo.png" width="100" height="25" alt="KickIt" />
    </a>
    

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            @if (Session["User"] != null)
            {
                if (User.IsInRole("Admin") || User.IsInRole("Owner"))
                {
                    <li class="nav-item " style="padding-top:5px;">
                        @Html.ActionLink("Panel", "Index", "Panel", new { area = "Admin" }, new { @class = "navbar-brand" })
                    </li>
                }
            }
        </ul>
        @Html.Partial("_LoginPartial")
    </div>
</nav>
